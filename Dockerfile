# Используем базовый образ с Python 3.8
FROM python:3.10

# Установка рабочей директории в контейнере
WORKDIR /app

# Копирование файла с зависимостями в рабочую директорию
COPY requirements.txt .

# Установка зависимостей
RUN pip install --no-cache-dir -r requirements.txt

# Копирование всех файлов проекта в рабочую директорию
COPY . .

# Открытие порта, если ваше приложение работает с сетью
EXPOSE 8000

# Команда для запуска прил
CMD ["python", "main.py"]